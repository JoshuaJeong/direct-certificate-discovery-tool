<?xml version="1.0" encoding="UTF-8"?>
<beans:beans
    xmlns:aop="http://www.springframework.org/schema/aop"
    xmlns:beans="http://www.springframework.org/schema/beans"
    xmlns:c="http://www.springframework.org/schema/c"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:dcdt="http://direct-test.com/spring/schema/spring-dcdt"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:task="http://www.springframework.org/schema/task"
    xmlns:util="http://www.springframework.org/schema/util"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://direct-test.com/spring/schema/spring-dcdt http://direct-test.com/spring/schema/spring-dcdt.xsd
        http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">
    
    <!--====================================================================================================
    = INSTANCE LDAP CONFIG
    =====================================================================================================-->
    <beans:bean id="instanceLdapConfig" class="gov.hhs.onc.dcdt.config.InstanceLdapConfig" abstract="true"/>
    <beans:bean id="instanceLdapConfigImpl" class="gov.hhs.onc.dcdt.config.impl.InstanceLdapConfigImpl" parent="instanceLdapConfig" abstract="true"
        p:bindAddress="#{ ipAddrLocalAny }"
        p:sslType="NONE">
        <beans:property name="bindConfigAnonymous">
            <beans:bean parent="ldapBindConfigAnon"/>
        </beans:property>
    </beans:bean>
    
    <beans:bean id="instanceLdapConfig1" parent="instanceLdapConfigImpl"
        p:bindPort="10389"
        p:name="ldap1"
        p:nameDisplay="LDAP 1">
        <beans:property name="bindConfigAdmin">
            <beans:bean parent="ldapBindConfigImpl"
                p:bindDn="${dcdt.instance.ldap.1.bind.admin.dn}"
                p:bindPassword="${dcdt.instance.ldap.1.bind.admin.pass}"/>
        </beans:property>
    </beans:bean>
    
    <beans:bean id="instanceLdapConfig2" parent="instanceLdapConfigImpl"
        p:bindPort="11389"
        p:name="ldap2"
        p:nameDisplay="LDAP 2">
        <beans:property name="bindConfigAdmin">
            <beans:bean parent="ldapBindConfigImpl"
                p:bindDn="${dcdt.instance.ldap.2.bind.admin.dn}"
                p:bindPassword="${dcdt.instance.ldap.2.bind.admin.pass}"/>
        </beans:property>
    </beans:bean>
    
    <beans:bean id="instanceLdapConfig3" parent="instanceLdapConfigImpl"
        p:bindPort="12389"
        p:name="ldap3"
        p:nameDisplay="LDAP 3">
        <beans:property name="bindConfigAdmin">
            <beans:bean parent="ldapBindConfigImpl"
                p:bindDn="${dcdt.instance.ldap.3.bind.admin.dn}"
                p:bindPassword="${dcdt.instance.ldap.3.bind.admin.pass}"/>
        </beans:property>
    </beans:bean>
</beans:beans>