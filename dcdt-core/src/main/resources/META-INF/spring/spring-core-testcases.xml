<?xml version="1.0" encoding="UTF-8"?>
<beans:beans
    xmlns:aop="http://www.springframework.org/schema/aop"
    xmlns:beans="http://www.springframework.org/schema/beans"
    xmlns:c="http://www.springframework.org/schema/c"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:dcdt="http://direct-test.com/spring/schema/spring-dcdt"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:util="http://www.springframework.org/schema/util"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://direct-test.com/spring/schema/spring-dcdt http://direct-test.com/spring/schema/spring-dcdt.xsd
        http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">

    <beans:bean id="toolTestcase" class="gov.hhs.onc.dcdt.testcases.ToolTestcase" abstract="true"/>
    <beans:bean id="toolTestcaseDesc" class="gov.hhs.onc.dcdt.testcases.ToolTestcaseDescription" abstract="true"/>
    <beans:bean id="toolTestcaseResult" class="gov.hhs.onc.dcdt.testcases.results.ToolTestcaseResult" abstract="true"/>
    <beans:bean id="toolTestcaseResultConfig" class="gov.hhs.onc.dcdt.testcases.results.ToolTestcaseResultConfig" abstract="true"/>
    <beans:bean id="toolTestcaseResultStep" class="gov.hhs.onc.dcdt.testcases.results.ToolTestcaseResultStep" abstract="true"/>
    <beans:bean id="toolTestcaseResultStepDesc" class="gov.hhs.onc.dcdt.testcases.results.ToolTestcaseResultStepDescription" abstract="true"/>

    <beans:bean id="toolTestcaseDnsResultStep" class="gov.hhs.onc.dcdt.testcases.results.impl.ToolTestcaseDnsResultStepImpl"
        parent="toolTestcaseResultStep" abstract="true"/>
    <beans:bean id="toolTestcaseDnsCertificateLookupResultStep" class="gov.hhs.onc.dcdt.testcases.results.impl.ToolTestcaseDnsCertificateLookupResultStepImpl"
        parent="toolTestcaseResultStep" abstract="true"/>
    <beans:bean id="toolTestcaseLdapConnectionResultStep" class="gov.hhs.onc.dcdt.testcases.results.impl.ToolTestcaseLdapConnectionResultStepImpl"
        parent="toolTestcaseResultStep" abstract="true"/>
    <beans:bean id="toolTestcaseLdapCertificateLookupResultStep" class="gov.hhs.onc.dcdt.testcases.results.impl.ToolTestcaseLdapCertificateLookupResultStepImpl"
        parent="toolTestcaseResultStep" abstract="true"/>
    <beans:bean id="toolTestcaseResultStepDescriptionImpl" class="gov.hhs.onc.dcdt.testcases.results.impl.ToolTestcaseResultStepDescriptionImpl"
        parent="toolTestcaseResultStepDesc" abstract="true"/>

    <!--====================================================================================================
    = TESTCASE SPECIFICATIONS
    =====================================================================================================-->
    <util:list id="toolTestcaseSpecsDns">
        <dcdt:normalized-string>RFC 4398: Section 2.1</dcdt:normalized-string>
        <dcdt:normalized-string>Direct Applicability Statement for Secure Health Transport: Section 5.3</dcdt:normalized-string>
    </util:list>

    <!--====================================================================================================
    = TESTCASE RESULTS - DNS RECORD LOOKUP STEPS
    =====================================================================================================-->
    <beans:bean id="dnsCertRecordLookup" parent="toolTestcaseDnsResultStep"
        p:resultType="DNS_LOOKUP"
        p:dnsRecordType="CERT"
        p:locationType="DNS"
        p:dnsLookupService-ref="dnsLookupServiceExternal"/>

    <beans:bean id="dnsAddrBoundCertRecordLookup" parent="dnsCertRecordLookup"
        p:bindingType="ADDRESS">
        <beans:property name="description">
            <beans:bean parent="toolTestcaseResultStepDescriptionImpl">
                <beans:property name="text">
                    <dcdt:normalized-string>
                        Query DNS for Direct address-bound CERT records.
                    </dcdt:normalized-string>
                </beans:property>
            </beans:bean>
        </beans:property>
    </beans:bean>

    <beans:bean id="dnsDomainBoundCertRecordLookup" parent="dnsCertRecordLookup"
        p:bindingType="DOMAIN">
        <beans:property name="description">
            <beans:bean parent="toolTestcaseResultStepDescriptionImpl">
                <beans:property name="text">
                    <dcdt:normalized-string>
                        Query DNS for Direct domain-bound CERT records.
                    </dcdt:normalized-string>
                </beans:property>
            </beans:bean>
        </beans:property>
    </beans:bean>

    <beans:bean id="dnsSrvRecordLookup" parent="toolTestcaseDnsResultStep"
        p:resultType="DNS_LOOKUP"
        p:dnsRecordType="SRV"
        p:bindingType="DOMAIN"
        p:locationType="DNS"
        p:dnsLookupService-ref="dnsLookupServiceExternal">
        <beans:property name="description">
            <beans:bean parent="toolTestcaseResultStepDescriptionImpl">
                <beans:property name="text">
                    <dcdt:normalized-string>
                        Query DNS for SRV records.
                    </dcdt:normalized-string>
                </beans:property>
            </beans:bean>
        </beans:property>
    </beans:bean>

    <!--====================================================================================================
    = TESTCASE RESULTS - LDAP STEPS
    =====================================================================================================-->
    <beans:bean id="ldapConnection" parent="toolTestcaseLdapConnectionResultStep"
        p:resultType="LDAP_CONNECTION"
        p:bindingType="NONE"
        p:locationType="LDAP"
        p:ldapStatus="LDAP_CONNECTION_SUCCESS"
        p:ldapLookupService-ref="ldapLookupServiceImpl">
        <beans:property name="description">
            <beans:bean parent="toolTestcaseResultStepDescriptionImpl">
                <beans:property name="text">
                    <dcdt:normalized-string>
                        Connect to an LDAP server.
                    </dcdt:normalized-string>
                </beans:property>
            </beans:bean>
        </beans:property>
    </beans:bean>

    <!--====================================================================================================
     = TESTCASE RESULTS - CERTIFICATE LOOKUP STEPS
     =====================================================================================================-->
    <beans:bean id="dnsCertLookup" parent="toolTestcaseDnsCertificateLookupResultStep"
        p:resultType="CERT_LOOKUP"
        p:locationType="DNS"
        p:certificateStatus="NO_CERT"/>

    <beans:bean id="ldapCertLookup" parent="toolTestcaseLdapCertificateLookupResultStep"
        p:resultType="CERT_LOOKUP"
        p:locationType="LDAP"
        p:certificateStatus="NO_CERT"
        p:ldapLookupService-ref="ldapLookupServiceImpl"/>

    <beans:bean id="dnsAddrBoundCertLookup" parent="dnsCertLookup"
        p:bindingType="ADDRESS">
        <beans:property name="description">
            <beans:bean parent="toolTestcaseResultStepDescriptionImpl">
                <beans:property name="text">
                    <dcdt:normalized-string>
                        Query DNS for Direct address-bound X.509 certificates found in CERT records.
                    </dcdt:normalized-string>
                </beans:property>
            </beans:bean>
        </beans:property>
    </beans:bean>

    <beans:bean id="dnsDomainBoundCertLookup" parent="dnsCertLookup"
        p:bindingType="DOMAIN">
        <beans:property name="description">
            <beans:bean parent="toolTestcaseResultStepDescriptionImpl">
                <beans:property name="text">
                    <dcdt:normalized-string>
                        Query DNS for Direct domain-bound X.509 certificates found in CERT records.
                    </dcdt:normalized-string>
                </beans:property>
            </beans:bean>
        </beans:property>
    </beans:bean>

    <beans:bean id="ldapAddrBoundCertLookup" parent="ldapCertLookup"
        p:bindingType="ADDRESS">
        <beans:property name="description">
            <beans:bean parent="toolTestcaseResultStepDescriptionImpl">
                <beans:property name="text">
                    <dcdt:normalized-string>
                        Query an LDAP server for Direct address-bound X.509 certificates.
                    </dcdt:normalized-string>
                </beans:property>
            </beans:bean>
        </beans:property>
    </beans:bean>

    <beans:bean id="ldapDomainBoundCertLookup" parent="ldapCertLookup"
        p:bindingType="DOMAIN">
        <beans:property name="description">
            <beans:bean parent="toolTestcaseResultStepDescriptionImpl">
                <beans:property name="text">
                    <dcdt:normalized-string>
                        Query an LDAP server for Direct domain-bound X.509 certificates.
                    </dcdt:normalized-string>
                </beans:property>
            </beans:bean>
        </beans:property>
    </beans:bean>

    <!--====================================================================================================
     = TESTCASE RESULTS - NO CERTIFICATES FOUND IN DNS CERT RECORDS
     =====================================================================================================-->
    <beans:bean id="noCertsFoundInDns" parent="hostingTestcaseResultConfigImpl">
        <beans:property name="results">
            <beans:list>
                <beans:ref bean="dnsAddrBoundCertRecordLookup"/>
                <beans:ref bean="dnsAddrBoundCertLookup"/>
                <beans:ref bean="dnsDomainBoundCertRecordLookup"/>
                <beans:ref bean="dnsDomainBoundCertLookup"/>
            </beans:list>
        </beans:property>
    </beans:bean>

    <!--====================================================================================================
     = CERTIFICATE DISCOVERY STEPS
     =====================================================================================================-->
    <util:list id="certDiscoverySteps">
        <beans:ref bean="dnsAddrBoundCertRecordLookup"/>
        <beans:ref bean="dnsAddrBoundCertLookup"/>
        <beans:ref bean="dnsDomainBoundCertRecordLookup"/>
        <beans:ref bean="dnsDomainBoundCertLookup"/>
        <beans:ref bean="dnsSrvRecordLookup"/>
        <beans:ref bean="ldapConnection"/>
        <beans:ref bean="ldapAddrBoundCertLookup"/>
        <beans:ref bean="ldapDomainBoundCertLookup"/>
    </util:list>
</beans:beans>