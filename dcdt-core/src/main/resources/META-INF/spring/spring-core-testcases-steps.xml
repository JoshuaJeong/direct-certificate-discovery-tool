<?xml version="1.0" encoding="UTF-8"?>
<beans:beans
    xmlns:aop="http://www.springframework.org/schema/aop"
    xmlns:beans="http://www.springframework.org/schema/beans"
    xmlns:c="http://www.springframework.org/schema/c"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:dcdt="http://direct-test.com/spring/schema/spring-dcdt"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:util="http://www.springframework.org/schema/util"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://direct-test.com/spring/schema/spring-dcdt http://direct-test.com/spring/schema/spring-dcdt.xsd
        http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">
    
    <!--====================================================================================================
    = TESTCASE STEP DESCRIPTIONS
    =====================================================================================================-->
    <beans:bean id="toolTestcaseStepDesc" class="gov.hhs.onc.dcdt.testcases.steps.ToolTestcaseStepDescription" abstract="true"/>
    
    <!--====================================================================================================
    = TESTCASE STEPS
    =====================================================================================================-->
    <beans:bean id="toolTestcaseStep" class="gov.hhs.onc.dcdt.testcases.steps.ToolTestcaseStep" abstract="true"/>

    <beans:bean id="toolTestcaseDnsLookupStep" class="gov.hhs.onc.dcdt.testcases.steps.impl.ToolTestcaseDnsLookupStepImpl"
        parent="toolTestcaseStep" abstract="true"/>
    <beans:bean id="toolTestcaseDnsCertificateLookupStep" class="gov.hhs.onc.dcdt.testcases.steps.impl.ToolTestcaseDnsCertificateLookupStepImpl"
        parent="toolTestcaseStep" abstract="true"/>
    <beans:bean id="toolTestcaseLdapConnectionStep" class="gov.hhs.onc.dcdt.testcases.steps.impl.ToolTestcaseLdapConnectionStepImpl"
        parent="toolTestcaseStep" abstract="true"/>
    <beans:bean id="toolTestcaseLdapCertificateLookupStep" class="gov.hhs.onc.dcdt.testcases.steps.impl.ToolTestcaseLdapCertificateLookupStepImpl"
        parent="toolTestcaseStep" abstract="true"/>
    <beans:bean id="toolTestcaseStepDescriptionImpl" class="gov.hhs.onc.dcdt.testcases.steps.impl.ToolTestcaseStepDescriptionImpl"
        parent="toolTestcaseStepDesc" abstract="true"/>

    <!--====================================================================================================
    = DNS RECORD LOOKUP STEPS
    =====================================================================================================-->
    <beans:bean id="dnsCertRecordLookup" parent="toolTestcaseDnsLookupStep" abstract="true"
        p:resultType="DNS_LOOKUP"
        p:dnsRecordType="CERT"
        p:locationType="DNS"/>

    <beans:bean id="dnsAddrBoundCertRecordLookup" parent="dnsCertRecordLookup"
        p:bindingType="ADDRESS">
        <beans:property name="description">
            <beans:bean parent="toolTestcaseStepDescriptionImpl">
                <beans:property name="text">
                    <dcdt:normalized-string>
                        Query DNS for Direct address-bound CERT records.
                    </dcdt:normalized-string>
                </beans:property>
            </beans:bean>
        </beans:property>
    </beans:bean>

    <beans:bean id="dnsDomainBoundCertRecordLookup" parent="dnsCertRecordLookup"
        p:bindingType="DOMAIN">
        <beans:property name="description">
            <beans:bean parent="toolTestcaseStepDescriptionImpl">
                <beans:property name="text">
                    <dcdt:normalized-string>
                        Query DNS for Direct domain-bound CERT records.
                    </dcdt:normalized-string>
                </beans:property>
            </beans:bean>
        </beans:property>
    </beans:bean>

    <beans:bean id="dnsSrvRecordLookup" parent="toolTestcaseDnsLookupStep"
        p:resultType="DNS_LOOKUP"
        p:dnsRecordType="SRV"
        p:bindingType="DOMAIN"
        p:locationType="DNS">
        <beans:property name="description">
            <beans:bean parent="toolTestcaseStepDescriptionImpl">
                <beans:property name="text">
                    <dcdt:normalized-string>
                        Query DNS for SRV records.
                    </dcdt:normalized-string>
                </beans:property>
            </beans:bean>
        </beans:property>
    </beans:bean>

    <!--====================================================================================================
    = LDAP CONNECTION STEP
    =====================================================================================================-->
    <beans:bean id="ldapConnection" parent="toolTestcaseLdapConnectionStep"
        p:resultType="LDAP_CONNECTION"
        p:bindingType="NONE"
        p:locationType="LDAP"
        p:ldapStatus="LDAP_CONNECTION_SUCCESS">
        <beans:property name="description">
            <beans:bean parent="toolTestcaseStepDescriptionImpl">
                <beans:property name="text">
                    <dcdt:normalized-string>
                        Connect to an LDAP server.
                    </dcdt:normalized-string>
                </beans:property>
            </beans:bean>
        </beans:property>
    </beans:bean>

    <!--====================================================================================================
    = CERTIFICATE LOOKUP STEPS
    =====================================================================================================-->
    <beans:bean id="dnsCertLookup" parent="toolTestcaseDnsCertificateLookupStep" abstract="true"
        p:resultType="CERT_LOOKUP"
        p:locationType="DNS"
        p:certificateStatus="NO_CERT"/>

    <beans:bean id="ldapCertLookup" parent="toolTestcaseLdapCertificateLookupStep" abstract="true"
        p:resultType="CERT_LOOKUP"
        p:locationType="LDAP"
        p:certificateStatus="NO_CERT"/>

    <beans:bean id="dnsAddrBoundCertLookup" parent="dnsCertLookup"
        p:bindingType="ADDRESS">
        <beans:property name="description">
            <beans:bean parent="toolTestcaseStepDescriptionImpl">
                <beans:property name="text">
                    <dcdt:normalized-string>
                        Query DNS for Direct address-bound X.509 certificates found in CERT records.
                    </dcdt:normalized-string>
                </beans:property>
            </beans:bean>
        </beans:property>
    </beans:bean>

    <beans:bean id="dnsDomainBoundCertLookup" parent="dnsCertLookup"
        p:bindingType="DOMAIN">
        <beans:property name="description">
            <beans:bean parent="toolTestcaseStepDescriptionImpl">
                <beans:property name="text">
                    <dcdt:normalized-string>
                        Query DNS for Direct domain-bound X.509 certificates found in CERT records.
                    </dcdt:normalized-string>
                </beans:property>
            </beans:bean>
        </beans:property>
    </beans:bean>

    <beans:bean id="ldapAddrBoundCertLookup" parent="ldapCertLookup"
        p:bindingType="ADDRESS">
        <beans:property name="description">
            <beans:bean parent="toolTestcaseStepDescriptionImpl">
                <beans:property name="text">
                    <dcdt:normalized-string>
                        Query an LDAP server for Direct address-bound X.509 certificates.
                    </dcdt:normalized-string>
                </beans:property>
            </beans:bean>
        </beans:property>
    </beans:bean>

    <beans:bean id="ldapDomainBoundCertLookup" parent="ldapCertLookup"
        p:bindingType="DOMAIN">
        <beans:property name="description">
            <beans:bean parent="toolTestcaseStepDescriptionImpl">
                <beans:property name="text">
                    <dcdt:normalized-string>
                        Query an LDAP server for Direct domain-bound X.509 certificates.
                    </dcdt:normalized-string>
                </beans:property>
            </beans:bean>
        </beans:property>
    </beans:bean>

    <!--====================================================================================================
    = NO CERTIFICATES FOUND IN DNS CERT RECORDS STEPS
    =====================================================================================================-->
    <beans:bean id="noCertsFoundInDns" parent="hostingTestcaseConfigImpl">
        <beans:property name="configSteps">
            <beans:list>
                <beans:bean parent="dnsAddrBoundCertRecordLookup"/>
                <beans:bean parent="dnsAddrBoundCertLookup"/>
                <beans:bean parent="dnsDomainBoundCertRecordLookup"/>
                <beans:bean parent="dnsDomainBoundCertLookup"/>
            </beans:list>
        </beans:property>
    </beans:bean>

    <!--====================================================================================================
    = CERTIFICATE DISCOVERY STEPS
    =====================================================================================================-->
    <beans:bean id="certDiscoverySteps" class="java.util.ArrayList" lazy-init="true" scope="prototype">
        <beans:constructor-arg>
            <util:list>
                <beans:bean parent="dnsAddrBoundCertRecordLookup"/>
                <beans:bean parent="dnsAddrBoundCertLookup"/>
                <beans:bean parent="dnsDomainBoundCertRecordLookup"/>
                <beans:bean parent="dnsDomainBoundCertLookup"/>
                <beans:bean parent="dnsSrvRecordLookup"/>
                <beans:bean parent="ldapConnection"/>
                <beans:bean parent="ldapAddrBoundCertLookup"/>
                <beans:bean parent="ldapDomainBoundCertLookup"/>
            </util:list>
        </beans:constructor-arg>
    </beans:bean>

    <!--====================================================================================================
    = TESTCASE STEP CONFIGURATIONS
    =====================================================================================================-->
    <beans:bean id="toolTestcaseConfig" class="gov.hhs.onc.dcdt.testcases.ToolTestcaseConfig" abstract="true"/>
</beans:beans>