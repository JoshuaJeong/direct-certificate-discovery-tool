<?xml version="1.0" encoding="UTF-8"?>
<beans:beans
    xmlns:aop="http://www.springframework.org/schema/aop"
    xmlns:beans="http://www.springframework.org/schema/beans"
    xmlns:c="http://www.springframework.org/schema/c"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:dcdt="http://direct-test.com/spring/schema/spring-dcdt"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:util="http://www.springframework.org/schema/util"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://direct-test.com/spring/schema/spring-dcdt http://direct-test.com/spring/schema/spring-dcdt.xsd
        http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">
    
    <beans:bean id="toolObjMapper" class="gov.hhs.onc.dcdt.json.ToolObjectMapper" abstract="true"/>
    <beans:bean id="toolObjMapperImpl" class="gov.hhs.onc.dcdt.json.impl.ToolObjectMapperImpl" parent="toolObjMapper"
        p:annotationIntrospector-ref="toolAnnoInspectorImpl">
        <beans:property name="configFeatures">
            <util:map>
                <beans:entry key="#{ T(com.fasterxml.jackson.databind.DeserializationFeature).READ_ENUMS_USING_TO_STRING }" value="true"/>
                <beans:entry key="#{ T(com.fasterxml.jackson.databind.SerializationFeature).FAIL_ON_EMPTY_BEANS }" value="false"/>
                <beans:entry key="#{ T(com.fasterxml.jackson.databind.SerializationFeature).INDENT_OUTPUT }" value="true"/>
                <beans:entry key="#{ T(com.fasterxml.jackson.databind.SerializationFeature).WRITE_ENUMS_USING_TO_STRING }" value="true"/>
            </util:map>
        </beans:property>
        <beans:property name="deserializationConverters">
            <util:map>
                <beans:entry value-ref="dnConv">
                    <beans:key>
                        <beans:bean parent="convPairFromStr"
                            c:targetType="org.apache.directory.api.ldap.model.name.Dn"/>
                    </beans:key>
                </beans:entry>
                <beans:entry value-ref="dnsNameConv">
                    <beans:key>
                        <beans:bean parent="convPairFromStr"
                            c:targetType="org.xbill.DNS.Name"/>
                    </beans:key>
                </beans:entry>
                <beans:entry value-ref="exprNodeConv">
                    <beans:key>
                        <beans:bean parent="convPairFromStr"
                            c:targetType="org.apache.directory.api.ldap.model.filter.ExprNode"/>
                    </beans:key>
                </beans:entry>
                <beans:entry value-ref="inetAddrConv">
                    <beans:key>
                        <beans:bean parent="convPairFromStr"
                            c:targetType="java.net.InetAddress"/>
                    </beans:key>
                </beans:entry>
                <beans:entry value-ref="pathConv">
                    <beans:key>
                        <beans:bean parent="convPairFromStr"
                            c:targetType="java.nio.file.Path"/>
                    </beans:key>
                </beans:entry>
                <beans:entry value-ref="rdnConv">
                    <beans:key>
                        <beans:bean parent="convPairFromStr"
                            c:targetType="org.apache.directory.api.ldap.model.name.Rdn"/>
                    </beans:key>
                </beans:entry>
                <beans:entry value-ref="x500NameConv">
                    <beans:key>
                        <beans:bean parent="convPairFromStr"
                            c:targetType="org.bouncycastle.asn1.x500.X500Name"/>
                    </beans:key>
                </beans:entry>
            </util:map>
        </beans:property>
        <beans:property name="modules">
            <util:set>
                <beans:bean class="com.fasterxml.jackson.datatype.hibernate4.Hibernate4Module"/>
            </util:set>
        </beans:property>
        <beans:property name="serializationConverters">
            <util:map>
                <beans:entry value-ref="dnConv">
                    <beans:key>
                        <beans:bean parent="convPairToStr"
                            c:sourceType="org.apache.directory.api.ldap.model.name.Dn"/>
                    </beans:key>
                </beans:entry>
                <beans:entry value-ref="dnsNameConv">
                    <beans:key>
                        <beans:bean parent="convPairToStr"
                            c:sourceType="org.xbill.DNS.Name"/>
                    </beans:key>
                </beans:entry>
                <beans:entry value-ref="exprNodeConv">
                    <beans:key>
                        <beans:bean parent="convPairToStr"
                            c:sourceType="org.apache.directory.api.ldap.model.filter.ExprNode"/>
                    </beans:key>
                </beans:entry>
                <beans:entry value-ref="inetAddrConv">
                    <beans:key>
                        <beans:bean parent="convPairToStr"
                            c:sourceType="java.net.InetAddress"/>
                    </beans:key>
                </beans:entry>
                <beans:entry value-ref="pathConv">
                    <beans:key>
                        <beans:bean parent="convPairToStr"
                            c:sourceType="java.nio.file.Path"/>
                    </beans:key>
                </beans:entry>
                <beans:entry value-ref="rdnConv">
                    <beans:key>
                        <beans:bean parent="convPairToStr"
                            c:sourceType="org.apache.directory.api.ldap.model.name.Rdn"/>
                    </beans:key>
                </beans:entry>
                <beans:entry value-ref="x500NameConv">
                    <beans:key>
                        <beans:bean parent="convPairToStr"
                            c:sourceType="org.bouncycastle.asn1.x500.X500Name"/>
                    </beans:key>
                </beans:entry>
            </util:map>
        </beans:property>
    </beans:bean>
</beans:beans>