<?xml version="1.0" encoding="UTF-8"?>
<beans:beans
    xmlns:aop="http://www.springframework.org/schema/aop"
    xmlns:beans="http://www.springframework.org/schema/beans"
    xmlns:c="http://www.springframework.org/schema/c"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:task="http://www.springframework.org/schema/task"
    xmlns:util="http://www.springframework.org/schema/util"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">
    
    <aop:aspectj-autoproxy/>
    
    <context:component-scan base-package="gov.hhs.onc.dcdt"/>
    <context:spring-configured/>
    
    <beans:bean id="toolInstance" class="gov.hhs.onc.dcdt.config.ToolInstance" abstract="true"/>
    <beans:bean id="toolInstanceImpl" class="gov.hhs.onc.dcdt.config.impl.ToolInstanceImpl" parent="toolInstance" abstract="true"/>
    
    <beans:bean id="toolBeanPropSources" class="gov.hhs.onc.dcdt.config.ToolBeanPropertySources" abstract="true"/>
    <beans:bean id="toolBeanPropSourcesPropResolver" class="gov.hhs.onc.dcdt.config.ToolBeanPropertySourcesPropertyResolver" abstract="true"/>
    
    <beans:bean id="toolInstancePropSource" class="gov.hhs.onc.dcdt.config.impl.ToolInstancePropertySource" autowire="constructor"/>
    <beans:bean id="toolBeanPropSourcesImpl" class="gov.hhs.onc.dcdt.config.impl.ToolBeanPropertySourcesImpl" parent="toolBeanPropSources"
        autowire="constructor"/>
    <beans:bean id="toolBeanPropSourcesPropResolverImpl" class="gov.hhs.onc.dcdt.config.impl.ToolBeanPropertySourcesPropertyResolverImpl"
        parent="toolBeanPropSourcesPropResolver" autowire="constructor"/>
    
    <beans:bean id="toolPropSourcesPlaceholderConfigurer" class="gov.hhs.onc.dcdt.config.impl.ToolPropertySourcesPlaceholderConfigurerImpl" abstract="true"
        p:ignoreResourceNotFound="true"
        p:localOverride="true"
        p:propertySourcesPropertyResolver-ref="toolBeanPropSourcesPropResolverImpl">
        <beans:property name="locations">
            <beans:array>
                <beans:value>classpath*:META-INF/core/core.properties</beans:value>
                <!--suppress SpringModelInspection -->
                <beans:value>classpath*:core/core.properties</beans:value>
            </beans:array>
        </beans:property>
    </beans:bean>
    
    <beans:bean id="toolTaskExecutor" class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor" abstract="true"
        p:daemon="true"/>
</beans:beans>