<?xml version="1.0" encoding="UTF-8"?>
<beans:beans
    xmlns:aop="http://www.springframework.org/schema/aop"
    xmlns:beans="http://www.springframework.org/schema/beans"
    xmlns:c="http://www.springframework.org/schema/c"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:dcdt="http://direct-test.com/spring/schema/spring-dcdt"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:task="http://www.springframework.org/schema/task"
    xmlns:util="http://www.springframework.org/schema/util"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://direct-test.com/spring/schema/spring-dcdt http://direct-test.com/spring/schema/spring-dcdt.xsd
        http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">
    
    <!--====================================================================================================
    = TEST MAIL ADDRESS
    =====================================================================================================-->
    <!--suppress SpringModelInspection -->
    <beans:bean id="testMailAddrResults" parent="mailAddrImpl" autowire-candidate="false"
        c:addr="${dcdt.test.mail.addr.results:}"/>
    
    <!--====================================================================================================
    = TEST INSTANCE MAIL CONFIG
    =====================================================================================================-->
    <beans:bean id="testInstanceMailAddrConfigResults" parent="instanceMailAddrConfigImpl" autowire-candidate="false"
        p:mailAddress-ref="testMailAddrResults"
        p:name="results"
        p:nameDisplay="Results">
        <beans:property name="gatewayConfig">
            <!--suppress SpringModelInspection -->
            <beans:bean parent="mailGatewayConfigImpl"
                p:host="${dcdt.test.mail.addr.results.gateway.host:}"
                p:transportProtocol="SMTPS"/>
        </beans:property>
        <beans:property name="gatewayCredentialConfig">
            <!--suppress SpringModelInspection -->
            <beans:bean parent="mailGatewayCredConfigImpl"
                p:id="${dcdt.test.mail.addr.results.gateway.cred.id:}"
                p:secret="${dcdt.test.mail.addr.results.gateway.cred.secret:}"/>
        </beans:property>
    </beans:bean>
</beans:beans>