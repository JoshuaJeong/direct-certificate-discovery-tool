<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts-config PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
	"http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">
<struts-config>
	<form-beans>
		<form-bean name="CertLookUpActionForm" type="gov.hhs.onc.dcdt.cert.lookup.CertLookUpActionForm"/>
		<form-bean name="EmailSetActionForm" type="gov.hhs.onc.dcdt.email.property.EmailSetActionForm"/>
		<form-bean name="LookUpDropDownActionForm" type="gov.hhs.onc.dcdt.decrypt.LookUpDropDownActionForm"/>	
	</form-beans>
	
	<!--
	<global-exceptions>
	
	</global-exceptions>
	-->
	
	<!--
	<global-forwards>
		<forward name="welcome"  path="/Welcome.do"/>
	</global-forwards>
	-->
	
	<action-mappings>
		<action input="/dns.jsp" path="/DNS_TEST" name="CertLookUpActionForm" scope="session" validate="true" type="gov.hhs.onc.dcdt.cert.lookup.CertLookUpAction">
			<forward name="success" path="/dns_result.jsp" />
		</action>
		
		<action name="LookUpDropDownActionForm"  path="/Download" scope="session" validate="true" input="/download.jsp" type="gov.hhs.onc.dcdt.decrypt.LookUpDropDownAction"/>
		
		<action path="/Email_Set" input="/emailSet.jsp" name="EmailSetActionForm" validate="true" type="gov.hhs.onc.dcdt.email.property.EmailSetAction">
			<forward name="samePage" path="/emailSet.jsp" />
		</action>
		
		<action path="/Download-Anchor" type="gov.hhs.onc.dcdt.cert.DownloadAnchorAction"/>
	</action-mappings>
	
	<controller processorClass="org.apache.struts.tiles.TilesRequestProcessor"/>
	
	<message-resources parameter="gov.hhs.onc.dcdt.ApplicationResource"/>
	
	<plug-in className="org.apache.struts.tiles.TilesPlugin" >
		<set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml" />
		<set-property property="moduleAware" value="true" />
	</plug-in>
	
	<plug-in className="org.apache.struts.validator.ValidatorPlugIn">
		<set-property property="pathnames" value="/WEB-INF/validator-rules.xml,/WEB-INF/validation.xml"/>
	</plug-in>
</struts-config>