                                </resource>
                                <resource>
                                    <directory>${project.build.webappDirectory}-dependency-resources/META-INF</directory>
                                    <excludes>
                                        <exclude>spring/**</exclude>
                                        <exclude>**/*.conf</exclude>
                                        <exclude>**/*.properties</exclude>
                                        <exclude>**/*.xml</exclude>
                                    </excludes>
