            <id>test-integration-components</id>
            <activation>
                <property>
                    <name>!skipTests</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.cargo</groupId>
                        <artifactId>cargo-maven2-plugin</artifactId>
                        <configuration>
                            <configuration>
                                <home>${project.test.server.1.jetty.1.config.home}</home>
                                <properties>
                                    <cargo.hostname>${project.test.server.1.jetty.1.host}</cargo.hostname>
                                    <cargo.rmi.port>${project.test.server.1.jetty.1.port.rmi}</cargo.rmi.port>
