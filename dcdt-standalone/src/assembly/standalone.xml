<assembly
    xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    
    <id>standalone</id>
    <baseDirectory>${project.artifactId}</baseDirectory>
    
    <formats>
        <format>tar.gz</format>
    </formats>
    
    <fileSets>
        <!-- Executable files -->
        <fileSet>
            <directory>${project.build.directory}/${project.artifactId}/bin</directory>
            <includes>
                <include>**/*.sh</include>
            </includes>
            <outputDirectory>/bin</outputDirectory>
        </fileSet>
        <!-- Configuration files -->
        <fileSet>
            <directory>${project.build.directory}/${project.artifactId}/conf</directory>
            <filtered>true</filtered>
            <includes>
                <include>**/*.properties</include>
                <include>**/*.xml</include>
            </includes>
            <outputDirectory>/conf</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/${project.artifactId}/conf</directory>
            <excludes>
                <exclude>**/*.properties</exclude>
                <exclude>**/*.xml</exclude>
            </excludes>
            <outputDirectory>/conf</outputDirectory>
        </fileSet>
        <!-- Library files -->
        <fileSet>
            <directory>${project.build.directory}/${project.artifactId}/lib</directory>
            <includes>
                <include>**/*.jar</include>
            </includes>
            <outputDirectory>/lib</outputDirectory>
        </fileSet>
    </fileSets>
    
    <files>
        <file>
            <outputDirectory>/lib</outputDirectory>
            <source>${project.build.directory}/${project.build.finalName}.${project.packaging}</source>
        </file>
    </files>
</assembly>