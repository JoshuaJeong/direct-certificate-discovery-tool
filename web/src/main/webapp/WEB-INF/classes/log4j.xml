<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration
	debug="false"
	threshold="all"
	xmlns:log4j="http://jakarta.apache.org/log4j/">
	
	<!--==================================================
	= APPENDERS: FILE
	===================================================-->
	<!--========== CERTIFICATE DISCOVERY ==========-->
	<appender name="certDiscoveryApp" class="org.apache.log4j.rolling.RollingFileAppender">
		<param name="append" value="true"/>
		<param name="bufferedIO" value="false"/>
		<param name="encoding" value="UTF-8"/>
		<param name="immediateFlush" value="true"/>
		<param name="threshold" value="all"/>

		<rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
			<param name="fileNamePattern" value="${dcdt.log.dir}/certDiscovery.%d{yyyy-MM-dd}.log"/>
		</rollingPolicy>
		
		<triggeringPolicy class="org.apache.log4j.rolling.SizeBasedTriggeringPolicy">
			<param name="maxFileSize" value="10485760"/>
		</triggeringPolicy>

		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} [%C %t] %p - %m%n"/>
		</layout>
	</appender>
	<!--========== EMAIL MESSAGES ==========-->
	<appender name="emailMessageApp" class="org.apache.log4j.rolling.RollingFileAppender">
		<param name="append" value="true"/>
		<param name="bufferedIO" value="false"/>
		<param name="encoding" value="UTF-8"/>
		<param name="immediateFlush" value="true"/>
		<param name="threshold" value="all"/>

		<rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
			<param name="fileNamePattern" value="${dcdt.log.dir}/emailMessage.%d{yyyy-MM-dd}.log"/>
		</rollingPolicy>
		
		<triggeringPolicy class="org.apache.log4j.rolling.SizeBasedTriggeringPolicy">
			<param name="maxFileSize" value="10485760"/>
		</triggeringPolicy>

		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} [%C %t] %p - %m%n"/>
		</layout>
	</appender>
	
	<!--==================================================
	= LOGGERS: DEPENDENCIES
	===================================================-->
	<logger name="org.apache" additivity="false">
		<level value="warn"/>
		<appender-ref ref="certDiscoveryApp"/>
	</logger>
	
	<!--==================================================
	= LOGGERS: PROJECT
	===================================================-->
	<logger name="gov.hhs.onc.dcdt.web.mail" additivity="false">
		<level value="all"/>
		<appender-ref ref="emailMessageApp"/>
	</logger>
	<logger name="gov.hhs.onc.dcdt.web.startup.EmailDirectoryWatcher" additivity="false">
		<level value="all"/>
		<appender-ref ref="emailMessageApp"/>
	</logger>
	
	<!--==================================================
	= LOGGERS: DEFAULT
	===================================================-->
	<!--========== CERTIFICATE DISCOVERY ==========-->
	<logger name="certDiscoveryLogger" additivity="false">
		<level value="all"/>
		<appender-ref ref="certDiscoveryApp"/>
	</logger>
	<!--========== EMAIL MESSAGES ==========-->
	<logger name="emailMessageLogger" additivity="false">
		<level value="all"/>
		<appender-ref ref="emailMessageApp"/>
	</logger>
	<!--========== ROOT ==========-->
	<root>
		<level value="all"/>
		<appender-ref ref="certDiscoveryApp"/>
	</root>
</log4j:configuration>