<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<header>
		<entity-resolver config-class="gov.hhs.onc.dcdt.config.ToolConfigEntityResolver"/>
		<result forceReloadCheck="true">
			<expressionEngine config-class="org.apache.commons.configuration.tree.xpath.XPathExpressionEngine"/>
			<nodeCombiner config-class="org.apache.commons.configuration.tree.OverrideCombiner"/>
		</result>
	</header>
	
	<override>
		<!-- Version configuration -->
		<properties fileName="${sys:dcdt.context.dir}/META-INF/gov/hhs/onc/dcdt/web/version.properties" throwExceptionOnMissing="true" config-name="version-web">
			<reloadingStrategy refreshDelay="1000" config-class="org.apache.commons.configuration.reloading.FileChangedReloadingStrategy"/>
		</properties>
	</override>
	
	<additional>
		<!-- Web configuration -->
		<properties fileName="${sys:dcdt.config.dir}/config.properties" throwExceptionOnMissing="true" config-name="config" config-at="web">
			<reloadingStrategy refreshDelay="1000" config-class="org.apache.commons.configuration.reloading.FileChangedReloadingStrategy"/>
		</properties>
		<properties fileName="${sys:dcdt.config.dir}/email.properties" autoSave="true" throwExceptionOnMissing="true" config-name="email" config-at="web.email">
			<reloadingStrategy refreshDelay="1000" config-class="org.apache.commons.configuration.reloading.FileChangedReloadingStrategy"/>
		</properties>
	</additional>
</configuration>