<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts-config PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
	"http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">
<struts-config>
	<form-beans>
		<form-bean name="CertLookUpActionForm" type="gov.hhs.onc.dcdt.web.cert.lookup.CertLookUpActionForm"/>
		<form-bean name="EmailSetActionForm" type="gov.hhs.onc.dcdt.web.mail.property.EmailSetActionForm"/>
		<form-bean name="LookUpDropDownActionForm" type="gov.hhs.onc.dcdt.web.mail.decrypt.LookUpDropDownActionForm"/>	
	</form-beans>
	
	<global-exceptions>
		<exception key="error.global" type="java.lang.Exception" path="/error.jsp"/>
	</global-exceptions>
	
	<action-mappings>
		<action path="/" forward="/home.jsp"/>
		
		<action path="/hosting" 
			input="/dns.jsp" 
			name="CertLookUpActionForm" 
			scope="request" 
			validate="true" 
			type="gov.hhs.onc.dcdt.web.cert.lookup.CertLookUpAction">
			<forward name="success" path="/dns_result.jsp"/>
		</action>
		<action path="/hosting/result" 
			input="/dns_result.jsp" 
			name="CertLookUpActionForm" 
			scope="request" 
			validate="true" 
			type="gov.hhs.onc.dcdt.web.cert.lookup.CertLookUpAction"/>
		
		<action path="/discovery" 
			input="/download.jsp" 
			name="LookUpDropDownActionForm" 
			scope="request" 
			validate="true" 
			type="gov.hhs.onc.dcdt.web.mail.decrypt.LookUpDropDownAction"/>
		
		<action path="/discovery/email" 
			input="/emailSet.jsp" 
			name="EmailSetActionForm" 
			scope="request" 
			validate="true" 
			type="gov.hhs.onc.dcdt.web.mail.property.EmailSetAction">
			<forward name="samePage" path="/emailSet.jsp"/>
		</action>
		
		<action path="/download/anchor" type="gov.hhs.onc.dcdt.web.download.DownloadAnchorAction"/>
	</action-mappings>
	
	<controller processorClass="org.apache.struts.tiles.TilesRequestProcessor"/>
	
	<message-resources parameter="gov.hhs.onc.dcdt.web.ApplicationResource"/>
	
	<plug-in className="org.apache.struts.tiles.TilesPlugin">
		<set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml"/>
		<set-property property="moduleAware" value="true"/>
	</plug-in>
	
	<plug-in className="org.apache.struts.validator.ValidatorPlugIn">
		<set-property property="pathnames" value="/WEB-INF/validator-rules.xml,/WEB-INF/validation.xml"/>
	</plug-in>
</struts-config>