<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<header>
		<entity-resolver config-class="gov.hhs.onc.dcdt.config.ToolConfigEntityResolver"/>
		<result forceReloadCheck="true">
			<expressionEngine config-class="org.apache.commons.configuration.tree.xpath.XPathExpressionEngine"/>
			<nodeCombiner config-class="org.apache.commons.configuration.tree.OverrideCombiner"/>
		</result>
	</header>
	
	<override>
		<!-- System configuration -->
		<system/>
		
		<!-- Version configuration -->
		<properties fileName="META-INF/gov/hhs/onc/dcdt/version.properties" throwExceptionOnMissing="true" config-name="version">
			<reloadingStrategy refreshDelay="1000" config-class="org.apache.commons.configuration.reloading.FileChangedReloadingStrategy"/>
		</properties>
		
		<!-- Data configuration -->
		<xml fileName="META-INF/gov/hhs/onc/dcdt/data/domains.xml" throwExceptionOnMissing="true" config-name="domains" config-at="domains" schemaValidation="true">
			<reloadingStrategy refreshDelay="1000" config-class="org.apache.commons.configuration.reloading.FileChangedReloadingStrategy"/>
		</xml>
		<xml fileName="META-INF/gov/hhs/onc/dcdt/data/entries.xml" throwExceptionOnMissing="true" config-name="entries" config-at="entries" schemaValidation="true">
			<reloadingStrategy refreshDelay="1000" config-class="org.apache.commons.configuration.reloading.FileChangedReloadingStrategy"/>
		</xml>
		<xml fileName="META-INF/gov/hhs/onc/dcdt/data/ldap.xml" throwExceptionOnMissing="true" config-name="ldap" config-at="ldaps" schemaValidation="true">
			<reloadingStrategy refreshDelay="1000" config-class="org.apache.commons.configuration.reloading.FileChangedReloadingStrategy"/>
		</xml>
		<xml fileName="META-INF/gov/hhs/onc/dcdt/data/settings.xml" throwExceptionOnMissing="true" config-name="settings" config-at="settings" schemaValidation="true">
			<reloadingStrategy refreshDelay="1000" config-class="org.apache.commons.configuration.reloading.FileChangedReloadingStrategy"/>
		</xml>
		
		<!-- DNS record data configuration -->
		<xml fileName="META-INF/gov/hhs/onc/dcdt/data/dns/a.xml" throwExceptionOnMissing="true" config-name="dns-a" config-at="dns" schemaValidation="true">
			<reloadingStrategy refreshDelay="1000" config-class="org.apache.commons.configuration.reloading.FileChangedReloadingStrategy"/>
		</xml>
		<xml fileName="META-INF/gov/hhs/onc/dcdt/data/dns/cname.xml" throwExceptionOnMissing="true" config-name="dns-cname" config-at="dns" schemaValidation="true">
			<reloadingStrategy refreshDelay="1000" config-class="org.apache.commons.configuration.reloading.FileChangedReloadingStrategy"/>
		</xml>
		<xml fileName="META-INF/gov/hhs/onc/dcdt/data/dns/mx.xml" throwExceptionOnMissing="true" config-name="dns-mx" config-at="dns" schemaValidation="true">
			<reloadingStrategy refreshDelay="1000" config-class="org.apache.commons.configuration.reloading.FileChangedReloadingStrategy"/>
		</xml>
		<xml fileName="META-INF/gov/hhs/onc/dcdt/data/dns/ns.xml" throwExceptionOnMissing="true" config-name="dns-ns" config-at="dns" schemaValidation="true">
			<reloadingStrategy refreshDelay="1000" config-class="org.apache.commons.configuration.reloading.FileChangedReloadingStrategy"/>
		</xml>
		<xml fileName="META-INF/gov/hhs/onc/dcdt/data/dns/soa.xml" throwExceptionOnMissing="true" config-name="dns-soa" config-at="dns" schemaValidation="true">
			<reloadingStrategy refreshDelay="1000" config-class="org.apache.commons.configuration.reloading.FileChangedReloadingStrategy"/>
		</xml>
		<xml fileName="META-INF/gov/hhs/onc/dcdt/data/dns/srv.xml" throwExceptionOnMissing="true" config-name="dns-srv" config-at="dns" schemaValidation="true">
			<reloadingStrategy refreshDelay="1000" config-class="org.apache.commons.configuration.reloading.FileChangedReloadingStrategy"/>
		</xml>
		
		<!--Testcases data configuration -->
		<xml fileName="META-INF/gov/hhs/onc/dcdt/data/testcases/hosting.xml" throwExceptionOnMissing="true" config-name="testcases-hosting" config-at="testcases" schemaValidation="true">
			<reloadingStrategy refreshDelay="1000" config-class="org.apache.commons.configuration.reloading.FileChangedReloadingStrategy"/>
		</xml>
		<xml fileName="META-INF/gov/hhs/onc/dcdt/data/testcases/discovery.xml" throwExceptionOnMissing="true" config-name="testcases-discovery" config-at="testcases" schemaValidation="true">
			<reloadingStrategy refreshDelay="1000" config-class="org.apache.commons.configuration.reloading.FileChangedReloadingStrategy"/>
		</xml>
	</override>
	
	<additional>
		<!-- Load dependent module configuration, if available -->
		<configuration fileName="config-${dcdt:module}.xml" config-name="config-${dcdt:module}" config-optional="true">
			<reloadingStrategy refreshDelay="1000" config-class="org.apache.commons.configuration.reloading.FileChangedReloadingStrategy"/>
		</configuration>
	</additional>
</configuration>