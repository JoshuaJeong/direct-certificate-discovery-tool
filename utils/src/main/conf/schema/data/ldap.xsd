<?xml version="1.0" encoding="UTF-8"?>
<xs:schema
	elementFormDefault="qualified"
	targetNamespace="http://schema.direct-test.com/utils/data/ldap"
	xmlns="http://schema.direct-test.com/utils/data/ldap"
	xmlns:config="http://schema.direct-test.com/utils/config"
	xmlns:xs="http://www.w3.org/2001/XMLSchema">
	
	<xs:import namespace="http://schema.direct-test.com/utils/config" schemaLocation="http://schema.direct-test.com/utils/config"/>
	
	<xs:complexType name="ldap">
		<xs:annotation>
			<xs:documentation>
				A LDAP service.
			</xs:documentation>
		</xs:annotation>
		<xs:complexContent>
			<xs:restriction base="config:bean">
				<xs:attribute name="config-class" type="config:beanClassNameAttr" fixed="gov.hhs.onc.dcdt.utils.beans.LdapService"/>
				<xs:attribute name="name" type="config:attr"/>
				<xs:attribute name="real" type="xs:boolean"/>
				<xs:attribute name="host" type="config:attr"/>
				<xs:attribute name="port" type="config:portAttr"/>
				<xs:attribute name="useSsl" type="xs:boolean"/>
				<xs:attribute name="anonymousBind" type="xs:boolean" use="optional"/>
				<xs:attribute name="bindDnName" type="config:attr" use="optional"/>
				<xs:attribute name="bindPass" type="config:attr" use="optional"/>
				<xs:attribute name="hashBindPass" type="xs:boolean" use="optional"/>
				<xs:attribute name="hashBindPassDigestName" type="config:attr" use="optional"/>
			</xs:restriction>
		</xs:complexContent>
	</xs:complexType>
	
