	<xs:complexType name="ldaps">
		<xs:annotation>
			<xs:documentation>
				LDAP services parent.
			</xs:documentation>
		</xs:annotation>
		<xs:sequence minOccurs="0" maxOccurs="unbounded">
			<xs:element name="ldap" type="ldap"/>
		</xs:sequence>
	</xs:complexType>
	
	<xs:element name="ldaps" type="ldaps">
		<xs:annotation>
			<xs:documentation>
				LDAP services parent element.
			</xs:documentation>
		</xs:annotation>
		<xs:unique name="ldapId">
			<xs:selector xpath="ldaps/ldap"/>
			<xs:field xpath="@id"/>
		</xs:unique>
	</xs:element>
	
</xs:schema>