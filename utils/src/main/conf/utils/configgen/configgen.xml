<?xml version="1.0" encoding="UTF-8"?>
<configgen
	xmlns="http://schema.direct-test.com/utils/utils/configgen"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://schema.direct-test.com/utils/utils/configgen http://schema.direct-test.com/utils/utils/configgen"
	
	name="configgen"
	displayName="Configuration Generator"
	
	inputDir="out/certgen/${util:domain}"
	
	outputFile="out/${util:name}/${util:domain}-config.zip"
	outputFileArchivePath="config"
	
	resultMailPort="465"
	
	certsDir="/var/lib/direct/direct-cert-discovery-tool/certs"
	certsAnchorFile="${util:certsDir}/ca/${util:domain}_ca.der"
	
	rawMailDir="/var/lib/direct/mail/rawmsg"
	inMailDir="/var/lib/direct/mail/inmsg"
	outMailDir="/var/lib/direct/mail/outmsg"
	badMailDir="/var/lib/direct/mail/badmsg"/>